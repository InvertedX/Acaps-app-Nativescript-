<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true"
      navigatingTo="onNavigatingTo">
    <StackLayout>
        <GridLayout height="250" width="100%" verticalAlignment="center" backgroundColor="#FB5F5D">
            <StackLayout  verticalAlignment="center">
                <Image width="100" src="res://icon_white"/>
                <label textAlignment="center" color="white" marginTop="15" text="Amrita Carpooling System"/>
            </StackLayout>

        </GridLayout>
        <StackLayout marginTop="40">
            <TextField
                    style="margin: 25;margin-top:30;font-size: 16"
                    id="email_address"
                    hint="Amrita Vidya ID"
                    text="{{id}}"
                    keyboardType="text"/>

            <TextField
                    text="{{ password}}"
                    style="margin: 25;margin-top: 10;font-size: 16"
                    id="password"
                    keyboardType="text"
                    secure="true" hint="Amrita Vidya Password"/>
            <Button id="redButton" width="250"  tap="{{ login }}" text="Login With Amrita Vidya"/>

        </StackLayout>
    </StackLayout>
</Page>